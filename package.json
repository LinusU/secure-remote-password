{
  "name": "secure-remote-password",
  "version": "0.3.1",
  "license": "MIT",
  "description": "Dead simple React global state management based on use-subscription",
  "author": "Linus Unneb√§ck",
  "contributors": [
    "Frederic Godin <frederic.godin@swan.io>"
  ],
  "homepage": "https://github.com/zoontek/secure-remote-password#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/secure-remote-password.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client.js",
    "./server": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "srp",
    "srp6a",
    "authentication",
    "remote",
    "password"
  ],
  "scripts": {
    "build": "yarn clean && microbundle -f cjs src/*.ts",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*.{js,md,ts,tsx}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "yarn test && yarn build"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "array-buffer-to-hex": "^1.0.0",
    "crypto-digest-sync": "^1.0.0",
    "crypto-random-hex": "^1.0.0",
    "encode-utf8": "^1.0.3",
    "hex-to-array-buffer": "^1.1.0",
    "jsbn": "^1.1.0",
    "pad-start": "^1.0.2"
  },
  "devDependencies": {
    "microbundle": "^0.13.3",
    "mocha": "^9.0.2",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.2.0",
    "typescript": "^4.3.5"
  }
